{
  "name": "api-gateway-schema-generator",
  "version": "0.0.1",
  "description": "API Gateway GraphQL Schema Generator",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run generate-graphql-schema",
    "generate-graphql-schema": "babel-node scripts/GenerateGraphqlSchema.js",
    "lint": "eslint --ext .jsx --ext .js src",
    "fixlint": "eslint --fix --ext .jsx --ext .js src",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/decentralized-cloud/api-gateway-contract.git"
  },
  "author": "Morteza Alizadeh",
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/decentralized-cloud/api-gateway-contract/issues"
  },
  "homepage": "https://github.com/decentralized-cloud/api-gateway-contract#readme",
  "dependencies": {
    "graphql": "^15.4.0",
    "graphql-relay": "^0.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.1.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^7.15.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1"
  },
  "pre-commit": "lint:staged",
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write --single-quote true --trailing-comma all --print-width 150",
      "npm run fixlint",
      "git add"
    ]
  }
}
